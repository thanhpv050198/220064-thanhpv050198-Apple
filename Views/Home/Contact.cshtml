@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">
                <i class="fas fa-phone me-2"></i>Liên hệ với chúng tôi
            </h1>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Gửi tin nhắn cho chúng tôi</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Họ tên *</label>
                                <input type="text" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email *</label>
                                <input type="email" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="tel" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Chủ đề</label>
                                <select class="form-select">
                                    <option value="">Chọn chủ đề</option>
                                    <option value="product">Hỏi về sản phẩm</option>
                                    <option value="order">Hỗ trợ đơn hàng</option>
                                    <option value="return">Đổi trả sản phẩm</option>
                                    <option value="other">Khác</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nội dung tin nhắn *</label>
                            <textarea class="form-control" rows="5" required placeholder="Nhập nội dung tin nhắn của bạn..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Thông tin liên hệ</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6><i class="fas fa-map-marker-alt text-primary me-2"></i>Địa chỉ</h6>
                        <p class="mb-0">123 Đường ABC, Phường XYZ<br>Quận 1, TP. Hồ Chí Minh</p>
                    </div>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-phone text-primary me-2"></i>Điện thoại</h6>
                        <p class="mb-0">
                            <a href="tel:+84123456789" class="text-decoration-none">0123 456 789</a><br>
                            <a href="tel:+84987654321" class="text-decoration-none">0987 654 321</a>
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-envelope text-primary me-2"></i>Email</h6>
                        <p class="mb-0">
                            <a href="mailto:info@applestore.com" class="text-decoration-none">info@applestore.com</a><br>
                            <a href="mailto:support@applestore.com" class="text-decoration-none">support@applestore.com</a>
                        </p>
                    </div>
                    
                    <div class="mb-4">
                        <h6><i class="fas fa-clock text-primary me-2"></i>Giờ làm việc</h6>
                        <p class="mb-0">
                            Thứ 2 - Thứ 6: 8:00 - 18:00<br>
                            Thứ 7: 8:00 - 17:00<br>
                            Chủ nhật: 9:00 - 16:00
                        </p>
                    </div>
                    
                    <div>
                        <h6><i class="fas fa-share-alt text-primary me-2"></i>Mạng xã hội</h6>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="btn btn-outline-info btn-sm">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="btn btn-outline-danger btn-sm">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="btn btn-outline-success btn-sm">
                                <i class="fab fa-whatsapp"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Bản đồ</h4>
                </div>
                <div class="card-body p-0">
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                        <div class="text-center text-muted">
                            <i class="fas fa-map fa-3x mb-3"></i>
                            <p>Bản đồ sẽ được hiển thị tại đây<br>
                            <small>(Tích hợp Google Maps hoặc OpenStreetMap)</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
